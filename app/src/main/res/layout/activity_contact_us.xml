<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.ContactUs">

    <TextView
        android:id="@+id/z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/z"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x"
        android:layout_marginTop="30dp"
        android:layout_below="@id/c">

        <ImageView
            android:id="@+id/phonecall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/phone_24" />

        <TextView
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="+91 9704218219
                                             (click on the phone to call)"
            android:textColor="@color/black"
            android:textSize="17dp" />
        <ImageView
            android:id="@+id/copyone"
            android:layout_width="89dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/copyicon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/x"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/gmailicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text=" ananthagriservices@gmail.com"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/copytwo"
            android:layout_width="89dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/copyicon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_below="@id/v"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/chatwhat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/chatwhat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            android:text="+91 6302086144"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="40dp"
            android:gravity="bottom"
            android:text="(Click on the icon to chat with us on whatsapp)"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </RelativeLayout>


</RelativeLayout>